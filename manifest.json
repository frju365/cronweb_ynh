{
    "name": "Garradin",
    "id": "garradin",
    "packaging_format": 1,
    "requirements": {
        "yunohost": ">> 2.3.15"
    },
    "description": {
        "fr": "Logiciel libre de gestion d'association"
    },
    "url": "http://garradin.eu/a-propos/",
    "maintainer": {
        "name": "frju365",
        "email": "win10@tutanota.com"
    },
    "multi_instance": "true",
    "services": [
        "nginx",
        "php5-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Garradin",
                    "fr": "Choisissez un domaine pour Garradin"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Garradin",
                    "fr": "Choisissez un chemin pour Garradin"
                },
                "example": "/garradin",
                "default": "/garradin"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public Garradin site ?",
                    "fr": "Est-ce un site public ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}
